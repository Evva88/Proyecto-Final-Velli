<html lang="en">

<head>
   <meta charset="UTF-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <link rel="stylesheet" href="../src/public/css/color.css">
   <title>Tu Previa</title>
</head>

<body>
   <div class="row-md-4 d-flex align-items-center justify-content-center">
      <ul class="nav justify-content-end">
         <li class="nav-item">
            <a class="nav-link text-black" href="/realtimeProducts">Formulario</a>
         </li>
         <li class="nav-item">
            <a class="nav-link text-black" href="/chat">Chat</a>
         </li>
         <li class="nav-item">
            <a class="nav-link text-black" href="/products">Productos</a>
         </li>
         <li class="nav-item">
            <a class="nav-link text-black" href="/profile">Tu perfil</a>
         </li>
         <li>
            <button id="cartButton"> <img src="images/carritoImg.png" class="carritoImg"></button>
         </li>
      </ul>
   </div>


   <div class="container mt-5 custom-table">
      <div class="row">
         <div class="col-md-6">
            <h2>Bienvenido a tu carrito!</h2>
         </div>
      </div>

      <table class="table mt-3">
         <thead>
            <tr>
               <th scope="col">Producto</th>
               <th scope="col">Precio</th>
               <th scope="col">Cantidad</th>
               <th scope="col">Total</th>
               <th scope="col">Acciones</th>
            </tr>
         </thead>
         <tbody>
            {{#each products}}
            <tr>
               <td>{{this.product.title}}</td>
               <td>${{this.product.price}}</td>
               <td>{{this.quantity}}</td>
               <td>${{this.product.price}}{{this.quantity}}</td>

               <td>
                  <button onclick="eliminarProducto('{{this.product.title}}')" class="botons">Eliminar</button>
               </td>
            </tr>
            {{/each}}
         </tbody>
      </table>
      <div class="mt-3">
         <p class="font-weight-bold">Total a pagar: ${{calcularTotal products}}</p>
         <button onclick="realizarCompra()" class="botons">Realizar Compra</button>
      </div>
   </div>

</body>
<script src="../src/public/cart.js"></script>

</html>